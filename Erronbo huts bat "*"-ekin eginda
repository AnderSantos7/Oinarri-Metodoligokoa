#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
int main(int argc, char argv[])
{
	int n, i, j, k;
	char str[128];
	printf("Emaidazu erronboaren luzera: ");
	fgets(str, 128, stdin);
	sscanf(str, "%d", &n);

	for (i = 0; i<n+51; i++)
	{
		printf(" ");
	}
	printf("*\n");

	for (j = 0; j < n-1; j++)
	{
		for (i = 0; i < (n - j)+50; i++)
		{
			printf(" ");
		}
		printf("*");
		for (i = 0; i <= j * 2; i++)
		{
			printf(" ");
			
		}
		printf("*");
		if (j != n)
			printf("\n");
	}


	for (j = n - 1; j > 1; j--)
	{
		for (i = 0; i < n - j +52; i++)
		{
			printf(" ");
		}
		printf("*");
		for (i = 0; i < j * 2 - 3; i++)
		{
			printf(" ");
		}
		printf("*");
		printf("\n");
	}

	for (i = 0; i < (n)+51; i++)
	{
		printf(" ");
	}
	printf("*\n");


	printf("Sakatu \"return\" amaitzeko .....");
	fgets(str, 128, stdin);
	return 0;
}
